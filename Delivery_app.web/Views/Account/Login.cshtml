@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "Login to Continue";
}
@model AdminLoginModel

<div>
    <form asp-action="Login" method="post">
        <div class="d-flex flex-column align-items-center">
            <i class="fas fa-user-circle fa-4x"></i>
            <p class="lead pt-2">Admin Login</p>
        </div>

        @if (Model != null)
        {
            @if (Model.validationError != null)
            {
                <div class="alert alert-danger my-1">@Model.validationError</div>
            }
        }

        <div class="pb-3 pt-2">
            <div class="form-group">
                <input asp-for="@Model.email" class="form-control rounded-0" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                <span asp-validation-for="@Model.email" class="text-danger small font-italic"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.password" class="form-control rounded-0" id="pw" placeholder="Password">
                <span asp-validation-for="@Model.password" class="text-danger small font-italic"></span>
            </div>
            <div class="form-check d-flex align-items-baseline">
                <input type="checkbox" class="form-check-input" id="rme" asp-for="@Model.rememberMe">
                <label class="form-check-label font-weight-normal" for="rme"><em>Remember Me</em></label>
            </div>
        </div>
        <button type="submit" class="btn btn-danger btn-block rounded-0"><em>Login</em></button>
    </form>
</div>
