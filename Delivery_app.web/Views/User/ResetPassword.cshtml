@{
    ViewData["Title"] = "Reset User Password";
}
@model ResetPasswordModel 

<div class="pb-3 pt-3">
    <a asp-controller="User" asp-action="Index" class="text-decoration-none text-dark d-flex justify-content-start align-items-baseline">
        <i class="fas fa-chevron-left fa-sm"></i>
        <h6 class="pl-2">Back</h6>
    </a>
    <h3 class="pt-2 pl-2">Reset User Password</h3>
</div>

<div class="px-2 pb-3">
    <form asp-action="ResetPassword" method="post">
        <input type="hidden" name="id" value="@Model.id" />
        <span asp-validation-for="@Model.id" class="text-danger small font-italic"></span>
        <div class="form-group">
            <label>New Password</label>
            <input asp-for="@Model.new_password" type="password" class="form-control" placeholder="New Password">
            <span asp-validation-for="@Model.new_password" class="text-danger small font-italic"></span>
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input asp-for="@Model.confirm_password" type="password" class="form-control" placeholder="Confirm Password">
            <span asp-validation-for="@Model.confirm_password" class="text-danger small font-italic"></span>
        </div>
        <div>
            <input class="btn btn-info" type="submit" name="Save" value="Save" />
        </div>
    </form>
</div>
