@{
    ViewData["Title"] = "Users";
}
@model IEnumerable<UserViewModel>

<div class="pb-3">
    <h3>Users</h3>
</div>
<div class="d-flex justify-content-between pb-3">
    <form asp-controller="User" asp-action="Index" class="shadow-sm">
        <div class="input-group">
            <input class="form-control" type="search" name="searchQuery" placeholder="Search.." aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-info" type="submit">Search</button>
            </div>
        </div>
    </form>
</div>

<div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Phone Num</th>
                    <th>Email</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.user_id</td>
                            <td>@user.name</td>
                            <td>@user.phone_num</td>
                            <td>@user.email</td>
                            <td>@user.created_at</td>
                            <td>@user.updated_at</td>
                            <td></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $("#UsersLink").removeClass("text-dark");
            $("#UsersLink").addClass("text-danger");
        });
    </script>
}

