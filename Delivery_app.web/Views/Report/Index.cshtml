@{
}
@model IEnumerable<UserReportModel>

<div class="pb-3">
    <h3>Reports</h3>
</div>

<div class="d-flex pb-3 flex-wrap">
    <a href="#" class="mr-3 mb-2 btn btn-outline-danger rounded">User Report</a>
    <a href="#" class="mr-3 mb-2 btn btn-outline-danger rounded">Order Report</a>
    <a href="#" class="mr-3 mb-2 btn btn-outline-danger rounded">Courier Report</a>
</div>
<div class="d-flex justify-content-between pb-3 flex-column flex-sm-row">
    <form class="shadow-none shadow-sm pb-3 pb-sm-0">
        <div class="input-group col-12 px-0">
            <input class="form-control" type="search" name="searchQuery" placeholder="Search.." aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-info" type="submit">Search</button>
            </div>
        </div>
    </form>
    <div>
        <a asp-action="DownloadCSVFile" class="btn btn-outline-danger" type="button">
            <i class="fas fa-file-csv pr-2"></i>
            Download CSV
        </a>
    </div>
</div>

<div>
    <div class="table-responsive table-bordered text-center">
        <table class="table table-striped table-hover">
            <thead class="">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Phone Num</th>
                    <th>Email</th>
                    <th>Created At</th>
                    <th>Total Orders</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() != 0)
                {
                    @foreach (var d in Model)
                    {
                        if (d != null)
                        {
                            <tr>
                                <td>@d.user_id</td>
                                <td>@d.name</td>
                                <td>@d.phone_num</td>
                                <td>@d.email</td>
                                <td>@d.created_at</td>
                                <td>@d.total_orders</td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <tr>
                        No record found.
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $("#ReportLink").removeClass("text-dark");
            $("#ReportLink").addClass("text-danger");
        });
    </script>
}